{
  "name": "codereview-agent",
  "version": "1.0.0",
  "description": "An LLM-powered code review agent built on simple-agent SDK",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codereview-agent": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "code-review",
    "agent",
    "ai",
    "openai",
    "tools"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "simple-agent": "file:../simple-agent",
    "picocolors": "^1.1.1",
    "ora": "^8.2.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
